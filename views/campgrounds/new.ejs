<% include ../partials/header%>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a new Campground</h1>
        </div>

        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="inputName">Name</label>
                    <input id="inputName" class="form-control" type="text" name="name" placeholder="name">
                </div>

                <div class="form-group">
                    <label for="inputPrice">Price</label>
                    <input id="inputPrice" class="form-control" type="number" name="price"
                           placeholder="price" min="0.01" step="0.01">
                </div>

                <div class="form-group">
                    <label for="inputURL">Image URL</label>
                    <input id="inputURL" class="form-control" type="text" name="image" placeholder="img
                    url">
                </div>

                <div class="form-group">
                    <label for="inputDes">Description</label>
                    <input id="inputDes" class="form-control" type="text" name="description"
                            placeholder="description">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>

            <div class="form-signin">
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>


    </div>


    </div>



</div>



<% include ../partials/footer%>